# Security hardening for mugshot uploads
# Only image files should live here; explicitly block script execution.

<FilesMatch "\.(php|phtml|php3|php4|php5|php7|php8|phar|phps|pl|py|cgi|sh|bash|exe)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Deny from all
    </IfModule>
</FilesMatch>

<IfModule mod_php.c>
    php_flag engine off
</IfModule>

AddType text/plain .php .phtml .php3 .php4 .php5 .php7 .php8 .phar .phps
